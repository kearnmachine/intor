<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="at.intoor.DeviceDetailActivity">

    <TextView
        android:text="@string/devicedetail_address"
        android:layout_width="fill_parent"
        android:id="@+id/editAddressText"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editAddress"
        android:layout_below="@+id/editAddressText"
        android:layout_alignParentEnd="true"
        android:editable="false"/>

    <TextView
        android:text="@string/devicedetail_txpower"
        android:layout_width="fill_parent"
        android:id="@+id/editTxPowerText"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAddress"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTxPower"
        android:layout_below="@+id/editTxPowerText"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:contentDescription="rssi"
        android:inputType="numberSigned"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveDeviceButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:id="@+id/deleteDeviceButton"
        android:layout_alignTop="@+id/saveDeviceButton"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
